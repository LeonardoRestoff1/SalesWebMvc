@model SalesWebMvc.Models.Vendedor;

@{
    ViewData["Title"] = "Adicionar Novo";
}
<style>
    form {
        margin-top: 20px;
    }

    h2, h4 {
        color: #343a40;
    }

    /* Adicionar margem ao botão */
    .btn-primary {
        margin-top: 15px;
    }
</style>


<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Criar">
            <!-- Exibição de erros de validação -->
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Nome -->
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Data de Nascimento -->
            <div class="form-group">
                <label asp-for="DataDeNascimento" class="control-label">Data de Nascimento</label>
                <input asp-for="DataDeNascimento" type="date" class="form-control" />
                <span asp-validation-for="DataDeNascimento" class="text-danger"></span>
            </div>

            <!-- Salário Base -->
            <div class="form-group">
                <label asp-for="SalarioBase" class="control-label">Salário Base</label>
                <input asp-for="SalarioBase" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="SalarioBase" class="text-danger"></span>
            </div>
            
            <!-- Botão de Envio -->
            <div class="form-group">
                <input type="submit" value="Adicionar Vendedor" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

