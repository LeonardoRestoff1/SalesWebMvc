@model IEnumerable<SalesWebMvc.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedores";
}

<h1>@ViewData["Title"]</h1>

<p>Pagina de Vendedores</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDeNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioBase)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataDeNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalarioBase)
                </td>
                <td>                   
                    <a asp-action="Details" asp-rout-id="@item.Id">Detalhes</a>
                    <a asp-action="Edit" asp-rout-id="@item.Id">Editar</a>
                    <a asp-action="Delete" asp-rout-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>


</table>


